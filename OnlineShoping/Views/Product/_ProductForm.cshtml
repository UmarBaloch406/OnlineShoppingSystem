    <div class="col-md-12">
        <h5>Description</h5>
        <label class="mb-3 top-label">
            @Html.TextAreaFor(a => a.Discription, new { @class = "form-control", placeholder = "Description" })
            <span>Description</span>
        </label>
    </div>
    <div class="row">
        <div class="col-12 form-group">
            <label class="form-label">Status</label>
            @Html.DropDownListFor(a => a.Status, new List<SelectListItem>
    {
           new SelectListItem{Text="Active" , Value="1"},
           new SelectListItem{Text="In-Active" , Value="0"} }, "Select Status", new { @class = "form-control" })

        </div>
    </div>
    <input type="submit" class="btn btn-primary mb-0" />
</form>
<script>
    $(document).ready(function () {
       
        Save();
    });
    function SubCatogaryShow() {
        debugger;
        var CategoryId = $('#CatogaryId').val();
        var dropd = $('#SubCategoryId');
        $.ajax({
            type: 'Get',
            url: '/Product/getSubCategory',
            data: {
                CatogaryId: CategoryId
            },
            success: function (res) {
                dropd.empty();
                for (var i = 0; i < res.length; i++) {
                    dropd.append(`<option value="${res[i].SubCategoryId}">${res[i].SubCategoryName}</option>`);
                }
            }
        })
    }


    function Save() {
        debugger;
        $('#Frmdata').submit(function (event) {
            event.preventDefault();
           
                var formdata = new FormData(document.getElementById('Frmdata'));
                $.ajax
                    ({
                        type: 'Post',
                        url: '/Product/Save',
                        processData: false,
                        contentType: false,
                        data: formdata,
                        success: function (result) {
                            if (result == 1) {
                                toastr.success("Data has been successfully Saved");
                            }
                            else {
                                toastr.error("Must have Added Four Picture");
                            }
                        }
                    })
            
           
        })
    }

