@model OnlineShoping.Models.ProductModel
@using OnlineShoping.Models
@{
    CategoryModel m = new CategoryModel();
    var list = m.CategoryShow();
    SubCategoryModel s = new SubCategoryModel();
    var sub = s.SubCategoryShow();
    UnitModel UNI = new UnitModel();
    var unit = UNI.UNITShow();
    ColorModel Col = new ColorModel();
    var Color = Col.ColorShow();
}
<form id="Frmdata" enctype="multipart/form-data">
    @Html.HiddenFor(a => a.ProductId)
    <div class="row g-3">
        <div class="col-md-6">
            <h5>Category Name  <span class="text-danger" id="MSGCatogaryId"></span></h5>
            <label class="mb-3 top-label">
                @Html.DropDownListFor(a => a.CatogaryId, new SelectList(list, "CatogaryId", "Name"), "Select category", new { onchange = "SubCatogaryShow();", @class = "form-control" })

                <span>Category Name</span>
            </label>
        </div>
        <div class="col-md-6">
            <h5>SubCategory Name <span class="text-danger" id="MSGSubCategoryId"></span></h5>
            <label class="mb-3 top-label">
                @Html.DropDownListFor(a => a.SubCategoryId, new List<SelectListItem>()
    {
      new SelectListItem(){Text="select Sub Category" , Value=""}}, new { @class = "form-control" })

                <span>SubCategory Name</span>
            </label>
        </div>
    </div>
    <div class="row g-3">

        <div class="col-md-6">
            <h5>Product Name <span class="text-danger" id="MSGProductName"></span></h5>
            <label class="mb-3 top-label">
                @Html.TextBoxFor(a => a.ProductName, new { @class = "form-control", placeholder = "Product Name" })

                <span>Product Name</span>
            </label>
        </div>
        <div class="col-md-6">
            <h5>Picture <span class="text-danger" id="MSGImagefilee"></span></h5>
            <label class="mb-3 top-label">
                @Html.TextBoxFor(a => a.Imagefilee, new { @class = "form-control",multiple="true", type = "file" })

                <span>Picture</span>
            </label>
        </div>
    </div>

    <div class="row g-3">

        <div class="col-md-4">
            <h5>Unit</h5>
            <label class="mb-3 top-label">
                @Html.DropDownListFor(a => a.UnitId, new SelectList(unit, "UnitId", "UnitName"), "Select Unit", new { @class = "form-control" })

                <span>Unit</span>
            </label>
        </div>
        <div class="col-md-4">
            <h5>Color</h5>
            <label class="mb-3 top-label">
                @Html.DropDownListFor(a => a.ColorId, new SelectList(Color, "ColorId", "ColorName"), "Select Color", new { @class = "form-control" })
                <span>Color</span>
            </label>
        </div>
        <div class="col-md-4">
            <h5>Discount</h5>
            <label class="mb-3 top-label">
                @Html.TextBoxFor(a => a.Discount, new { @class = "form-control", placeholder = "Discount" })

                <span>Discount</span>
            </label>
        </div>
    </div>
