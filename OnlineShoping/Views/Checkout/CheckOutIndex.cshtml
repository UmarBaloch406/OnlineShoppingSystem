<script>
    $(document).ready(function () {
        Save();
        GETCart();
    })
    function Save() {
        debugger;
        $('#frm1page').submit(function (event) {
            event.preventDefault();
            var formdata = new FormData(document.getElementById('frm1page'));
            $.ajax
                ({
                    type: 'Post',
                    url: '/Checkout/Saved',
                    processData: false,
                    contentType: false,
                    data: formdata,
                    success: function (result) {
                        if (result != null) {
                            toastr.success("Data has been successfully Saved");

                        }
                    }
                })
        })
    }

    function GETCart() {
        $.ajax({
            type: 'Get',
            url: '/Checkout/GEtDetail',
            success: function (res) {
                $('#GetCart').html(res);
            }
        })
    }

</script>


