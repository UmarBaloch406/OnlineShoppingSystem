<div class="checkout-area pb-100 pt-15 pb-sm-60">
    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-md-6">
                <form id="frm1page">
                    <div class="checkbox-form mb-sm-40">
                        <h3>Billing Details</h3>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="checkout-form-list mb-sm-30">
                                    <label>First Name <span class="required">*</span></label>
                                    @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list mb-30">
                                    <label>Last Name <span class="required">*</span></label>
                                    @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })

                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Address <span class="required">*</span></label>

                                    @Html.TextBoxFor(a => a.Address, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="checkout-form-list mb-30">
                                    <label>Postcode / Zip <span class="required">*</span></label>

                                    @Html.TextBoxFor(a => a.zipCode, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="checkout-form-list mb-30">
                                    <label>Phone  <span class="required">*</span></label>

                                    @Html.TextBoxFor(a => a.Contact, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-12">

                                <input type="submit" value="PlaceOrder" class="form-control" />

                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="col-lg-6 col-md-6">
                <div id="GetCart">

                </div>
            </div>
          </div>
        </div>
</div>


