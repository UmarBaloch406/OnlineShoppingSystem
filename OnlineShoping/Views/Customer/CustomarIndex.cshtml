@model OnlineShoping.Models.CustomerModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
  
    <!-- Favicon-->
    <link rel="icon" href="../../Assets/CustomarAssets/images/favicon.ico" type="image/x-icon">
    <!-- Plugins Core Css -->
    <link href="../../Assets/CustomarAssets/css/app.min.css" rel="stylesheet">
    <link href="../../Assets/CustomarAssets/css/form.min.css" rel="stylesheet">
    <!-- Custom Css -->
    <link href="../../Assets/CustomarAssets/css/style.css" rel="stylesheet" />
    <!-- You can choose a theme from css/styles instead of get all themes -->
    <link href="../../Assets/CustomarAssets/css/styles/all-themes.css" rel="stylesheet" />
    <style>
      
    </style>
</head>

<body  >
    
        <section >
            <div class="container-fluid" style="background-color:darkturquoise">

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    <strong>Register Here</strong>
                                </h2>

                            </div>
                            <form id="frm1" enctype="multipart/form-data">
                                <div class="body">

                                    <div class="row clearfix">

                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div class="form-line">

                                                    @Html.TextBoxFor(a => a.CustomerFirstName, new { @class = "form-control", placeholder = "First Name" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(a => a.CustomerLastName, new { @class = "form-control", placeholder = "Last Name" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(a => a.Contact, new { @class = "form-control", placeholder = "Contact" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                @Html.TextBoxFor(a => a.zipCode, new { @class = "form-control", placeholder = "Zip-Code" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">

                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(a => a.ImageFile, new { @class = "form-control", placeholder = "Image", type = "file" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                         <div class="col-sm-12">
                                            @Html.DropDownListFor(a => a.Status, new List<SelectListItem>
                                           {
                                     new SelectListItem{Text="Active" , Value="1"},
                                     new SelectListItem{Text="In-Active" , Value="0"} }, "Select Status", new { @class = "form-control" })


                                        </div>
                                    </div>
                                    <div class="col-lg-12 p-t-20 text-center">
                                        <input type="submit" class="btn btn-primary waves-effect m-r-15"/>
                                    
                                        <button type="button" class="btn btn-danger waves-effect">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
  

    <script src="../../Assets/CustomarAssets/js/app.min.js"></script>
    <script src="../../Assets/CustomarAssets/js/form.min.js"></script>
    <!-- Custom Js -->
    <script src="../../Assets/CustomarAssets/js/admin.js"></script>
    <script src="../../Assets/CustomarAssets/js/pages/forms/form-data.js"></script>
</body>

</html>
<script>
    $(document).ready(function () {
        Save();
    });
    function Save() {
        debugger;
        $('#frm1').submit(function (event) {
            event.preventDefault();
            var formdata = new FormData(document.getElementById('frm1'));
            $.ajax
                ({
                    type: 'Post',
                    url: '/Customer/Save',
                    processData: false,
                    contentType: false,
                    data: formdata,

                    success: function (res) {
                        if (res == 1) {
                            window.location.href = "/Customer/LoginIndex";
                        }
                    }
                    
                })
        })
    }
</script>