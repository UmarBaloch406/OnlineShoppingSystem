@model OnlineShoping.Models.PriceModel
@using OnlineShoping.Models
@{ 
    SizeModel m = new SizeModel();
    var data = m.SizeShow();
}
<form id="frm1" enctype="multipart/form-data">
    @Html.HiddenFor(a => a.ProductId)
    <div class="mb-3">
        <label class="form-label">Size</label>
        @Html.DropDownListFor(a => a.SizeId, new SelectList(data, "SizeId", "SizeName"), "Select Size", new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        @Html.TextBoxFor(a => a.Price, new { @class = "form-control" })

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="addEditConfirmButton">Add</button>
    </div>
</form>





<script>

    $(document).ready(function () {
        Savee();
});

    function Savee() {
        $('#frm1').submit(function (event) {
            event.preventDefault();
            var formdata = new FormData(document.getElementById('frm1'));
            $.ajax
                ({
                    type: 'Post',
                    url: '/Price/Save',
                    processData: false,
                    contentType: false,
                    data: formdata,
                    success: function (result) {
                        if (result == 1) {
                            toastr.success("Data has been successfully Saved");
                            TableeShow();
                        }
                    }
                })
        })
    }
 </script>
